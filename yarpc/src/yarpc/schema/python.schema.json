{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Schema for python output",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "name",
        "language",
        "location",
        "busName"
    ],
    "properties": {
        "name": {
            "type": "string"
        },
        "language": {
            "const": "py"
        },
        "location": {
            "type": "string"
        },
        "busName": {
            "type": "string"
        },
        "services": {
            "type": "array",
            "items": {
                "$ref": "common.schema.json#/serviceInterface"
            }
        },
        "clients": {
            "type": "array",
            "items": {
                "$ref": "common.schema.json#/clientInterface"
            }
        },
        "service_mocks": {
            "type": "array",
            "items": {
                "$ref": "common.schema.json#/serviceInterface"
            }
        },
        "client_mocks": {
            "type": "array",
            "items": {
                "$ref": "common.schema.json#/clientInterface"
            }
        }
    }
}